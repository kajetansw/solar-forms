{
  "compilerOptions": {
    "declaration": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "preserveSymlinks": true,
    "outDir": "./dist",
    "exactOptionalPropertyTypes": true,
    "types": ["vite/client", "jest"],
  },
  "include": ["./src"],
  "exclude": ["node_modules/", "test/"]
}

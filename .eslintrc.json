{
  "env":{
    "browser":true,
    "es2021":true
  },
  "extends":[
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:solid/typescript"
  ],
  "ignorePatterns": [
    "dist/*"
  ],
  "parser":"@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion":"latest",
    "sourceType":"module"
  },
  "plugins":[
    "@typescript-eslint",
    "solid"
  ],
  "rules":{
    "@typescript-eslint/no-namespace": "off",
    "indent":[
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "linebreak-style":[
      "error",
      "unix"
    ],
    "quotes":[
      "error",
      "single"
    ],
    "semi":[
      "error",
      "always"
    ]
  }
}